{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ES6",
        "baseUrl": "./",
    },
    "include": [
        "./**/*"
    ],
    "paths": {
        "@root/*": ["./*"],
        "@src/*": ["./src/*"],
        "@utils/*": ["./src/utils/*"],
    },
    "exclude": ["node_modules", "**/node_modules/*"]
}